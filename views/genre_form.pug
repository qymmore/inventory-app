extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Action, RPG, etc.' name='name' value=(undefined===genre ? '' : genre.name))
      br
      label(for='password') Enter admin password 
      br
      input(name='password' type='text' required=true)
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
